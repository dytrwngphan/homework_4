<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imgFrance"
        android:layout_width="286dp"
        android:layout_height="201dp"
        android:background="#000000"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:src="@drawable/france_flag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFranceInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/capital_paris_nlargest_city_paris_nnational_language_french_ntotal_area_643_801_km_ncurrency_euro"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/imgFrance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvFranceDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="14sp"
        android:lineSpacingExtra="4dp"
        android:text="@string/france_officially_the_french_republic_is_a_country_primarily_located_in_western_europe_it_includes_overseas_regions_and_territories_and_is_one_of_the_oldest_and_most_influential_countries_in_the_world_known_for_its_culture_cuisine_and_history"
        app:layout_constraintTop_toBottomOf="@id/tvFranceInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
